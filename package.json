{
  "name": "histvv",
  "version": "1.1.0",
  "description": "Histvv Web Application",
  "license": "GPL-3.0-or-later",
  "homepage": "https://histvv.uni-leipzig.de",
  "repository": "https://github.com/ubleipzig/histvv",
  "bugs": "https://github.com/ubleipzig/histvv/issues",
  "author": "Carsten Milling <cmil@hashtable.de>",
  "scripts": {
    "lint": "eslint app.js routes",
    "start": "nodemon -e js,json,xsl,xq ./bin/www",
    "test": "xo"
  },
  "bin": {
    "histvv-server": "bin/www"
  },
  "dependencies": {
    "async": "^2.6.1",
    "basex": "0.9.0",
    "debug": "4.0.1",
    "express": "^4.16.3",
    "libxslt": "^0.9.0",
    "morgan": "^1.9.1",
    "nconf": "^0.10.0",
    "parseurl": "^1.3.1"
  },
  "devDependencies": {
    "eslint": "^5.6.0",
    "nodemon": "^1.10.2",
    "xo": "^0.23.0"
  },
  "engines": {
    "node": ">=12.0"
  },
  "xo": {
    "space": true,
    "semicolon": true,
    "envs": [
      "node",
      "es6",
      "jest"
    ],
    "rules": {
      "space-before-function-paren": [
        "error",
        "always"
      ],
      "spaced-comment": 0,
      "capitalized-comments": 0,
      "operator-linebreak": [
        1,
        "after",
        {
          "overrides": {
            "?": "before",
            ":": "before"
          }
        }
      ]
    },
    "ignores": [
      "doc/**",
      "public/**"
    ]
  }
}
