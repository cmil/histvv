{
  "env": {
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "comma-dangle": 1,
    "indent": [ "error", 2 ],
    "linebreak-style": [ "error", "unix" ],
    "no-console": 0,
    "no-extra-semi": 1,
    "no-unused-vars": 1,
    "no-trailing-spaces": [1, { "skipBlankLines": true }],
    "no-unreachable": 1,
    "quotes": [ "error", "single" ],
    "semi": [ "error", "always" ]
  }
}
